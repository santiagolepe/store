<div class="productMain">
    <h3  class="text-warning" style="margin: 40px;">
      Products list <%= link_to '+', new_product_path, :class=>"btn btn-success" %>
    </h3>

    <span><%= flash[:notice] %></span>
    <ul>
      <% @products.each do |product| %>
        <li id='<%= "product_#{product.id}" %>' class="btn " style="width: 200px; margin: 5px;">
          <%= product.name %>
          </li>
          <%= link_to 'Show', product, :class => "btn btn-primary" %>
          <br>
      <% end %>
    </ul>

</div>
